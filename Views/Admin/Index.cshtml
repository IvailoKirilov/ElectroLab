@using System.Linq
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="card">
    <div class="card-body">
        <h2 class="card-title">New Reports</h2>

        @if (Model.Reports != null)  // Check for null and empty list
        {
            <ul class="list-group">
                @foreach (var report in Model.Reports)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@report.ReportContent</strong>
                        <span class="badge badge-primary">@report.ReportType</span>
                        <a href="@Url.Action("ViewReport", new { id = report.Id })" class="btn btn-info btn-sm">View Report</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No new reports at the moment.</p>
        }
    </div>
</div>

<hr />

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Recent Logs</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Performed By</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Action</td>
                        <td>@log.UserName</td>
                        <td>@log.Time</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
