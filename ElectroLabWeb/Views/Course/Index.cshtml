@model IEnumerable<ElectroLabModels.Models.Course>
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

<style>
    /* Hero section */
    .courses-hero {
        background: linear-gradient(rgba(0, 123, 255, 0.8), rgba(0, 123, 255, 0.9)), url('/img/courses-bg.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 0.5rem;
    }
    
    /* Course cards */
    .course-card {
        transition: all 0.3s ease;
        border: none;
        height: 100%;
    }
    
    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }
    
    .course-card .card-body {
        padding: 1.5rem;
        min-height: 180px;
    }
    
    .course-card .card-footer {
        background-color: transparent;
        padding: 1rem 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .author-avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 0.5rem;
    }
    
    /* Search and filters */
    .search-container {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
    }
    
    .filter-tag {
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .filter-tag:hover {
        background-color: #0d6efd !important;
        color: white !important;
    }
    
    /* Empty state */
    .empty-state {
        padding: 3rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }
    
    /* Animation for page load */
    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }
    
    @@ keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<!-- Hero Section -->
<div class="courses-hero mb-4 fade-in">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">@Localizer["OurCourses"]</h1>
                <p class="lead mb-4">@Localizer["CoursesHeroSubtitle"]</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-action="Create" class="btn btn-light btn-lg">
                    <i class="bi bi-plus-circle me-2"></i> @Localizer["CreateNewCourse"]
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container fade-in" style="animation-delay: 0.2s;">
    <!-- Search and Filters -->
    <div class="search-container shadow-sm">
        <div class="row g-3">
            <div class="col-md-12">
                <form method="get" asp-action="Index" class="d-flex">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0" 
                               placeholder="@Localizer["SearchCoursePlaceholder"]" 
                               name="searchTerm" 
                               value="@ViewData["SearchTerm"]" />
                        <button class="btn btn-primary" type="submit">
                            @Localizer["Search"]
                        </button>
                    </div>
                </form>
            </div>
